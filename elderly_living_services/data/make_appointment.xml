<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="elderly_booking_guide_template3" name="How to Book Guide">
        <t t-call="website.layout">
            <style>
                /* 統一藍色調主題 */
                .elder-bg-blue { background-color: #F0F7FF; }
                .elder-text-blue { color: #0D47A1; }
                .elder-btn-blue { background-color: #1976D2; border-color: #1976D2; color: white; border-radius: 50px; }

                /* 步驟圓圈樣式 */
                .step-circle {
                width: 60px;
                height: 60px;
                background-color: #1976D2;
                color: white;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 24px;
                font-weight: bold;
                margin: 0 auto 20px;
                box-shadow: 0 4px 10px rgba(25, 118, 210, 0.3);
                }
                .step-item { position: relative; }
                /* 手機端隱藏連接線，桌面端顯示 */
                @media (min-width: 992px) {
                .step-item:not(:last-child):after {
                content: '';
                position: absolute;
                top: 30px;
                left: 60%;
                width: 80%;
                border-top: 2px dashed #BDBDBD;
                z-index: 1;
                }
                }

                /* 聯絡卡片樣式 */
                .contact-card {
                border: none;
                border-radius: 15px;
                background: white;
                transition: all 0.3s;
                box-shadow: 0 4px 15px rgba(0,0,0,0.05);
                height: 100%;
                }
                .contact-card:hover { transform: translateY(-5px); box-shadow: 0 8px 25px rgba(0,0,0,0.1); }
                .whatsapp-green { background-color: #25D366; border-color: #25D366; color: white; border-radius: 50px; }
                .whatsapp-green:hover { background-color: #128C7E; color: white; }

                .cta-section { background: linear-gradient(135deg, #1976D2 0%, #0D47A1 100%); color: white; }
            </style>

            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_title elder-bg-blue pt80 pb64">
                    <div class="container text-center">
                        <h1 class="display-4 fw-bold elder-text-blue mb-3">成為香港長者的終身夥伴</h1>
                        <p class="lead mb-4 mx-auto text-dark" style="max-width: 700px;">
                            我們提供「健康、財富、安老」三護合一的綜合服務， 讓每位長者享受尊嚴、便捷、豐富的晚年生活
                        </p>
                        <div class="d-flex justify-content-center gap-3">
                            <a href="/elderly_appointment" class="btn elder-btn-blue btn-lg px-4">立即預約</a>
                            <a href="#how_it_works" class="btn btn-outline-primary btn-lg px-4 rounded-pill">瞭解流程
                            </a>
                        </div>
                    </div>
                </section>

                <section id="how_it_works" class="pt64 pb64 bg-white">
                    <div class="container text-center">
                        <h2 class="fw-bold elder-text-blue mb-5">預約流程</h2>
                        <div class="row">
                            <div class="col-12 col-md-3 mb-4 step-item">
                                <div class="step-circle">1</div>
                                <h4 class="fw-bold">選擇服務</h4>
                                <p class="text-muted px-2">瀏覽我們的服務項目，選擇符合您需求的服務</p>
                            </div>
                            <div class="col-12 col-md-3 mb-4 step-item">
                                <div class="step-circle">2</div>
                                <h4 class="fw-bold">填寫表單</h4>
                                <p class="text-muted px-2">提供基本信息和服務需求詳情</p>
                            </div>
                            <div class="col-12 col-md-3 mb-4 step-item">
                                <div class="step-circle">3</div>
                                <h4 class="fw-bold">確認預約</h4>
                                <p class="text-muted px-2">我們的團隊將與您聯絡確認時間和地點</p>
                            </div>
                            <div class="col-12 col-md-3 mb-4 step-item">
                                <div class="step-circle">4</div>
                                <h4 class="fw-bold">享受服務</h4>
                                <p class="text-muted px-2">由專業人員為您提供優質服務</p>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="pb64 pt32" style="background-color: #F8FBFF;">
                    <div class="container">
                        <div class="row g-4 justify-content-center">
                            <div class="col-12 col-md-4">
                                <div class="card contact-card p-4 text-center">
                                    <div class="mb-3">
                                        <i class="fa fa-phone fa-3x text-primary"/>
                                    </div>
                                    <h4 class="fw-bold">電話預約</h4>
                                    <p class="text-muted">直接致電我們的客服團隊，快速預約</p>
                                    <h3 class="elder-text-blue fw-bold mt-auto">2345-6789</h3>
                                </div>
                            </div>
                            <div class="col-12 col-md-4">
                                <div class="card contact-card p-4 text-center">
                                    <div class="mb-3">
                                        <i class="fa fa-whatsapp fa-3x text-success"/>
                                    </div>
                                    <h4 class="fw-bold">WhatsApp 預約</h4>
                                    <p class="text-muted">透過 WhatsApp 與我們聯絡，更加方便快捷</p>
                                    <div class="mt-auto">
                                        <a href="https://wa.me/85223456789" class="btn whatsapp-green btn-lg w-100">
                                            <i class="fa fa-whatsapp me-2"/>WhatsApp 聯絡
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-4">
                                <div class="card contact-card p-4 text-center">
                                    <div class="mb-3">
                                        <i class="fa fa-edit fa-3x text-info"/>
                                    </div>
                                    <h4 class="fw-bold">在線表單</h4>
                                    <p class="text-muted">填寫在線表單，我們會盡快與您聯絡</p>
                                    <div class="mt-auto">
                                        <a href="/elderly_appointment" class="btn elder-btn-blue btn-lg w-100">
                                            填寫表單
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section class="cta-section pt64 pb64 text-center">
                    <div class="container">
                        <h2 class="fw-bold mb-3 text-white">準備好開始了嗎？</h2>
                        <p class="mb-4 opacity-75">聯絡我們，讓我們成為您的終身夥伴</p>
                        <a href="/elderly_appointment"
                           class="btn btn-light btn-lg rounded-pill px-5 elder-text-blue fw-bold">
                            立即預約
                        </a>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <data noupdate="1">
        <record id="elderly_booking_page_record3" model="website.page">
            <field name="url">/how_to_book</field>
            <field name="is_published">True</field>
            <field name="view_id" ref="elderly_living_services.elderly_booking_guide_template3"/>
            <field name="website_meta_description">瞭解銀齡薈的預約流程，我們提供電話、WhatsApp 及在線預約服務。</field>
        </record>

        <record id="menu_elderly_booking_page3" model="website.menu">
            <field name="name">如何預約</field>
            <field name="url">/how_to_book</field>
            <field name="page_id" ref="elderly_booking_page_record3"/>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">12</field>
        </record>
    </data>
</odoo>