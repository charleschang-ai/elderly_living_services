<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="elderly_pricing_template2" name="Elderly Service Pricing">
        <t t-call="website.layout">
            <style>
                /* 延續藍色調主題 */
                .elder-bg-blue { background-color: #E3F2FD; }
                .elder-text-blue { color: #0D47A1; }
                .elder-btn-blue { background-color: #1976D2; border-color: #1976D2; color: white; border-radius: 50px; }

                /* 表格專屬樣式 */
                .pricing-table-container {
                    background: white;
                    border-radius: 20px;
                    overflow: hidden;
                    box-shadow: 0 10px 30px rgba(13, 71, 161, 0.08);
                    margin-top: -50px; /* 向上偏移，產生重疊層次感 */
                    position: relative;
                    z-index: 10;
                }
                .elder-table thead {
                    background-color: #1976D2;
                    color: white;
                    border: none;
                }
                .elder-table th {
                    padding: 20px !important;
                    font-weight: 600;
                    font-size: 1.1rem;
                    border: none !important;
                }
                .elder-table td {
                    padding: 18px 20px !important;
                    vertical-align: middle;
                    font-size: 1.05rem;
                    color: #444;
                    border-bottom: 1px solid #E3F2FD;
                }
                .elder-table tbody tr:hover {
                    background-color: #F8FBFF;
                }
                .price-text {
                    color: #1976D2;
                    font-weight: bold;
                    font-size: 1.1rem;
                }
                .cta-section { background: linear-gradient(135deg, #1976D2 0%, #0D47A1 100%); color: white; }
            </style>

            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_title elder-bg-blue pt80 pb100">
                    <div class="container text-center">
                        <h1 class="display-4 fw-bold elder-text-blue mb-3">成為香港長者的終身夥伴</h1>
                        <p class="lead mb-4 mx-auto text-dark" style="max-width: 700px;">
                            我們提供「健康、財富、安老」三護合一的綜合服務， 讓每位長者享受尊嚴、便捷、豐富的晚年生活
                        </p>
                        <div class="d-flex justify-content-center gap-3 mb-5">
                            <a href="/elderly_appointment" class="btn elder-btn-blue btn-lg px-4">立即預約</a>
                            <a href="#pricing_content" class="btn btn-outline-primary btn-lg px-4 rounded-pill">瞭解詳情</a>
                        </div>
                    </div>
                    <div class="container text-center mt-4">
                        <h2 class="fw-bold elder-text-blue">收費標準清單</h2>
                        <p class="text-muted">涵蓋健康、生活、社交、財務等全方位服務價格</p>
                    </div>
                </section>

                <section id="pricing_content" class="pb64 bg-light">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-10 pricing-table-container p-0">
                                <div class="table-responsive">
                                    <table class="table elder-table mb-0">
                                        <thead>
                                            <tr>
                                                <th scope="col" class="ps-4">服務項目</th>
                                                <th scope="col">服務類別</th>
                                                <th scope="col" class="text-end pe-4">參考價格</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="services" t-as="service">
                                                <tr>
                                                    <td class="ps-4 fw-bold">
                                                        <t t-esc="service.name"/>
                                                    </td>
                                                    <td>
                                                        <span class="badge rounded-pill bg-light text-primary px-3 py-2 border">
                                                            <t t-esc="service.category_id.name"/>
                                                        </span>
                                                    </td>
                                                    <td class="text-end pe-4">
                                                        <span class="price-text">
                                                            HK$ <t t-esc="'{0:,.2f}'.format(service.price)"/> / <t t-esc="service.unit_name"/>
                                                        </span>
                                                    </td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-4 text-muted">
                            <small>* 以上價格僅供參考，具體費用將根據長者個人健康狀況評估後確定。</small>
                        </div>
                    </div>
                </section>

                <section class="cta-section pt16 pb64 text-center">
                    <div class="container">
                        <h2 class="fw-bold mb-3">準備好開始了嗎？</h2>
                        <p class="mb-4">聯絡我們，薈成為您的終身夥伴</p>
                        <a href="/elderly_appointment" class="btn btn-light btn-lg rounded-pill px-5 elder-text-blue fw-bold">
                            立即預約
                        </a>
                    </div>
                </section>
            </div>
        </t>
    </template>

    <data noupdate="1">
        <record id="elderly_pricing_page_record2" model="website.page">
            <field name="url">/service_pricing</field>
            <field name="is_published">True</field>
            <field name="view_id" ref="elderly_living_services.elderly_pricing_template2"/>
            <field name="website_meta_description">查看銀齡薈各項長者服務的收費詳情，透明清晰的價格保證。</field>
        </record>

        <record id="menu_elderly_pricing_page2" model="website.menu">
            <field name="name">收費清單</field>
            <field name="url">/service_pricing</field>
            <field name="page_id" ref="elderly_pricing_page_record2"/>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">11</field>
        </record>

    </data>
</odoo>