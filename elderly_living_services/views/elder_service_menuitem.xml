<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_elderly_appointment" model="ir.actions.act_window">
        <field name="name">服務預約申請</field>
        <field name="res_model">elderly.appointment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">創建第一條預約申請</p>
        </field>
    </record>

    <record id="action_elderly_service" model="ir.actions.act_window">
        <field name="name">服務項目</field>
        <field name="res_model">elderly.service</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_elderly_category" model="ir.actions.act_window">
        <field name="name">服務類別</field>
        <field name="res_model">elderly.service.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_elderly_root"
              name="養老服務系統"
              web_icon="elderly_living_services,static/description/icon.png"
              sequence="1">

        <menuitem id="menu_elderly_service_item"
                  name="服務項目清單"
                  action="action_elderly_service"
                  sequence="20"/>

        <menuitem id="menu_elderly_appointment_item"
                  name="預約申請單"
                  action="action_elderly_appointment"
                  sequence="10"/>


        <menuitem id="menu_elderly_category_item"
                  name="服務類別"
                  action="action_elderly_category"
                  sequence="30"/>
    </menuitem>
</odoo>